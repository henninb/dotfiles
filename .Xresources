!! Colorscheme

! Dracula Xresources palette
*.foreground: #F8F8F2
*.background: #282A36
*.color0:     #000000
*.color8:     #4D4D4D
*.color1:     #FF5555
*.color9:     #FF6E67
*.color2:     #50FA7B
*.color10:    #5AF78E
*.color3:     #F1FA8C
*.color11:    #F4F99D
*.color4:     #BD93F9
*.color12:    #CAA9FA
*.color5:     #FF79C6
*.color13:    #FF92D0
*.color6:     #8BE9FD
*.color14:    #9AEDFE
*.color7:     #BFBFBF
*.color15:    #E6E6E6


! font spacing issue
!Xft.rgba: none
!Xft.hintstyle: hintfull
Xft.dpi: 96
Xft.antialias: true
Xft.rgba: none
Xft.hinting: true
Xft.autohint: true
Xft.hintstyle: hintslight

!xterm*font:     *-fixed-*-*-*-18-*
URxvt.font: xft:monofur for Powerline:pixelsize=20, xft:Symbola:pixelsize=12, xft:FuraCode Nerd Font:pixelsize=12
!URxvt.font: xft:monofur for Powerline:pixelsize=20
!URxvt.font: xft:Symbola:pixelsize=20, xft:monofur for Powerline:pixelsize=20
!URxvt.font: xft:Hack Nerd Front Mono:pixelsize=16
!URxvt.font: xft:monofur for Powerline:pixelsize=20, xft:Hack Nerd Front Mono:pixelsize=16
!URxvt.font: xft:monofur for Powerline:pixelsize=20, xft:Hack Nerd Front Mono:pixelsize=16, xft:JetBrainsMono Nerd Font Mono:pixelsize=16
!URxvt.font: xft:JetBrainsMono Nerd Font Mono:pixelsize=16
!URxvt.font: xft:JetBrainsMono Nerd Font Mono:pixelsize=16, xft:Hack Nerd Front Mono:pixelsize=16, xft:Symbola:pixelsize=16
!URxvt.font: xft:JetBrainsMono Nerd Font Mono:pixelsize=16, xft:Hack Nerd Front Mono:pixelsize=16
!URxvt.boldFont: xft:monofur for Powerline:style=Bold:size=16
!URxvt.letterSpace: true

! TODO: verify this term as it works on all platforms
!URxvt.termName: rxvt-256color
! TODO: testing on gentoo.
URxvt.termName: xterm-256color
! TODO: validate
!URxvt.termName: rxvt-unicode-256color
!xterm*faceName: xft:mono:medium:size=10

! urxvt -letsp 5   # this works in lf for showing glyphs
URxvt*letterSpace: 2
URxvt.imLocale: en_US.UTF-8
!URxvt.letterSpace: 1
URxvt.lineSpace: 0
URxvt.geometry: 92x24
URxvt.internalBorder: 24
URxvt.cursorBlink: true
URxvt.cursorUnderline: false
URxvt.saveline: 9999
URxvt.scrollBar: true
URxvt.scrollBar_right: true
URxvt.urgentOnBell: true
URxvt.depth: 24
URxvt.iso14755: false

! Location of custom Perl extensions
URxvt*.perl-lib: /home/henninb/.urxvt/perl-extensions

xterm*dynamicColors: true
URxvt*dynamicColors: on

URxvt*perl-ext-common: urxvt-colors,clipboard-past-on-right-click
URxvt*keysym.F12: perl:urxvt-colors:
!URxvt.keysym.Mod4-v: perl:clipboard:paste
!URxvt.keysym.Shift-Control-V: perl:clipboard:paste
!URxvt.keysym.F3: perl:clipboard:paste
!If true, copy to clipboard too
!URxvt.keyboard-select.clipboard:true

URxvt.transparent: true
URxvt.shading: 20

! Font for regular texts.
! Font names are case-insensitive.
! You can use a comma-separated list of fonts to set a fallback font.
xscreensaver-auth.default.Dialog.bodyFont: times new roman 12, dejavu serif 12

! Window background color. You can use color names.
xscreensaver-auth.default.Dialog.background: black

! Main text color. You can also use HEX color codes.
xscreensaver-auth.default.Dialog.foreground: #ffffff
