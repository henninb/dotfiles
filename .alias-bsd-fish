functions -e pbcopy
functions -e pbpaste

if not command -v gls > /dev/null; or [ "$OS" != "Darwin" ]
    functions -e ls
    functions -e ll
    functions -e l.
else
    alias ls 'gls --color=always'
    alias l. 'gls --color=always -d .*'
    alias ll 'gls --color=always -l'
end

